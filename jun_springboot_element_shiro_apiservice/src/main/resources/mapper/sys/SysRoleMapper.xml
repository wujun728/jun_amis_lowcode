<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.element.modules.sys.mapper.SysRoleMapper">

    <!-- 查询用户创建的角色ID列表 -->
    <select id="listRoleIdByCreatedUserId" resultType="long">
        SELECT
            role_id
        FROM
            sys_role
        WHERE
            create_user_id = #{createUserId}
    </select>

    <!-- 查询用户拥有的角色列表 -->
    <select id="listRolePermissionByUserId" resultType="com.element.modules.sys.entity.SysRoleEntity">
        SELECT
            role_id
        FROM
            sys_role sr
        LEFT JOIN
            sys_user_role sur ON sr.id = sur.role_id
        WHERE
            sur.user_id = #{userId}
    </select>

</mapper>